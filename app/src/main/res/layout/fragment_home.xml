<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/homeTopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is\nthe home page"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/homeEditText"/>

    <EditText
        android:id="@+id/homeEditText"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="enter number"
        android:inputType="number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/homeButtonSub"
        app:layout_constraintVertical_chainStyle="packed"/>


    <Button
        android:id="@+id/homeButtonSub"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginTop="20dp"
        android:text="submit and go to\ndashboard"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeEditText"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/homeButtonNot"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginTop="20dp"
        android:text="see notifications"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeButtonSub"
        app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>